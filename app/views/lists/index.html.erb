<div class="container text-center">
  <div class="header-image">
    <%= image_tag 'https://sm.ign.com/t/ign_es/lists/t/the-10-hig/the-10-highest-grossing-marvel-movies-of-all-time_8vna.1280.jpg', alt: 'Header Image' %>
  </div>
  <h1>My Lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <%= link_to list_path(list) do %>
            <img src="<%= list.image_url %>" class="card-img-top" alt="<%= list.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= list.name %></h5>
            </div>
          <% end %>
          <%= link_to 'Edit List', edit_list_path(list), class: "btn btn-primary mt-2" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create a movie list', new_list_path, class: "btn btn-success" %>
</div>
